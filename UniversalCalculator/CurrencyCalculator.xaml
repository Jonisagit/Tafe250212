<Page
    x:Class="Calculator.CurrencyCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid Background="Ivory">
		<StackPanel Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" >
			<TextBlock x:Name="outputTextBlock" Text="Currency Conversion Calculator" Margin="10" FontSize="36" Height="74" Foreground="#FF080101" />
		</StackPanel>
		<StackPanel HorizontalAlignment="Left" Width="393" Margin="0,145,0,0" >
			<TextBlock x:Name="Amount" Text="Amount ($)" Margin="10" FontSize="36" Height="64" Foreground="#FF080101" Width="210" />
			<TextBox x:Name="amountBox" Width="284" Height="44" />
			<TextBlock x:Name="Result" Margin="10" FontSize="16" Height="390" Foreground="#FF080101" Width="381" />
		</StackPanel>
		<StackPanel HorizontalAlignment="Center" Width="351" Margin="0,145,0,0" >
			<StackPanel Height="643">
				<TextBlock x:Name="From" Margin="10" FontSize="36" Height="64" Foreground="#FF080101" Width="210" ><Run Text="      "/><Run Text="From"/></TextBlock>
				<ComboBox HorizontalAlignment="Center" x:Name="fromComboBox" Height="37" Width="191" SelectedIndex="0">
					<x:String>USD- US Dollar</x:String>
					<x:String>EUR- Euros</x:String>
					<x:String>INR- Indian Rupees</x:String>
					<x:String>GBP- British Pound</x:String>
				</ComboBox>
			</StackPanel>
			<StackPanel Height="199" Width="261">
				<Button x:Name="calcButton" Content="Calculate Currency" Margin="10" Width="240" Height="46" FontSize="24" Foreground="#FF220404" Background="#331551C0" Click="calcButton_Click" />
				<Button x:Name="exitButton" Content="Exit" Margin="10" Width="240" Height="46" FontSize="24" Background="#331957CB" Foreground="#FF1A0202" Click="exitButton_Click" />
			</StackPanel>
		</StackPanel>
		<StackPanel HorizontalAlignment="Right" Width="366" Margin="0,145,0,0" >
			<TextBlock x:Name="To" Margin="10" FontSize="36" Height="61" Foreground="#FF080101" Width="48" Text="To" />
			<ComboBox HorizontalAlignment="Center" x:Name="toComboBox" Height="43" Width="167" SelectedIndex="0" SelectedItem="">
				<x:String>USD- US Dollars</x:String>
				<x:String>EUR- Euros</x:String>
				<x:String>INR- Indian Rupees</x:String>
				<x:String>GBP- British Pound</x:String>
			</ComboBox>
		</StackPanel>

	</Grid>

</Page>
